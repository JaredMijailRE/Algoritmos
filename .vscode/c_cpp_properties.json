{
  "configurations": [
    {
      "name": "linux-clang-x64",
      "includePath": [
        "${workspaceFolder}/**",
        "/opt/cuda/include"
      ],
      "defines": [
        "__CUDACC__"
      ],
      "compilerPath": "/opt/cuda/bin/nvcc",
      "compilerArgs": [
        "--cuda-path=/opt/cuda",
        "--cuda-gpu-arch=sm_70",
        "--driver-mode=g++"
      ],
      "cStandard": "c17",
      "cppStandard": "c++17",
      "intelliSenseMode": "linux-clang-x64"
    }
  ],
  "version": 4
}